@model Webbanhang.Models.ThanhVien
@{
    Layout = "~/Views/Layout/Adminlayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminLayout/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/AdminLayout/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng Ký Tài Khoản</h1>
                                    </div>
                                    @using (Html.BeginForm("DangkyAdmin", "Admin", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                <label style="margin-left:15px">Tên tài khoản</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.TrungLap</p>
                                                    <p style="color: red">@ViewBag.Taikhoannull</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="margin-left:15px">Mật khẩu</label>
                                                <div class="col-md-10">
                                                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.Matkhaunull</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="margin-left:15px">Họ tên</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.Hotennull</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="margin-left:15px">Địa chỉ</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.diachinull</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="margin-left:15px">Email</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.emailnull</p>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label style="margin-left:15px">Điện thoại</label>
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.Dienthoainull</p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label style="margin-left:15px">Mã loại thành viên</label>
                                                <div class="col-md-10">
                                                    @Html.DropDownList("MaLoaiTV", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.MaLoaiTV, "", new { @class = "text-danger" })
                                                    <p style="color: red">@ViewBag.MaLoaiTVnull</p>
                                                </div>
                                            </div>
                                            <div class="form-group">                                               
                                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                                    Đăng Ký
                                                </button>
                                            </div>
                                        </div>
                                    }
                                    <div style="margin-left:40px; margin-top:10px">
                                        <a href="~/Admin/DangnhapAdmin">Quay về trang đăng nhập</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/AdminLayout/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminLayout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/AdminLayout/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/AdminLayout/js/sb-admin-2.min.js"></script>

</body>

</html>





