@model IEnumerable<Webbanhang.Models.KhachHang>

@{
    ViewBag.Title = "Khachhang";
}

<div class="container" style="margin: 100px 0px">
    <div class="row">
        <div class="col-md-12">
            <h3>DANH SÁCH KHÁCH HÀNG</h3>
            <p>
                <a href="~/Khachhang/ThemKhachhang">Thêm mới khách hàng</a> |
                <a href="~/Home/Index">Trở về</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenKhachHang)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgaySinh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiaChi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SDT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenKhachHang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SDT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>       
                            <a href="@Url.Action("Capnhat","Khachhang",new {id = item.MaKH })">Edit</a>|
                            <a href="@Url.Action("Xoa","Khachhang",new {id = item.MaKH })">Xóa</a>
</td>
                    </tr>
                }

            </table>
        </div>

    </div>

</div>
